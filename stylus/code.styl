code 
  font-size 13px
  padding 2px 4px
  color #c7254e
  background-color #f9f2f4
  border-radius 4px
pre
  overflow auto
  display block
  font-size 13px
  line-height 1.42857143
  color #333
  word-break break-all
  word-wrap break-word
  background-color #f5f5f5
  border 1px solid #ccc
  border-radius 4px
  margin 0 0 10px
  padding 9.5px
  font-size 13px
  font-weight 300
  font-family Menlo,Monaco,Consolas,"Courier New",monospace
  &.code-snippet
    &.prettyprint
      background rgba(255,255,255,0.96)
      border 0
      border-left 30px solid #f1f1f1
      color #333
      font-size 10px
      font-family monospace
      line-height 20px
      margin-bottom 0
      padding 10px 10px 10px 2px
      border-radius 3px
      box-shadow 0 1px 6px rgba(0,0,0,0.4)
      list-style dotted
      ol
        margin 0
        padding 0
        color #999
        width 600px
      li
        padding-left 10px
        margin 0
        &.L1,
        &.L3,
        &.L5,
        &.L7,
        &.L9
          background none
        &.L0,
        &.L1,
        &.L2,
        &.L3,
        &.L5,
        &.L6,
        &.L7,
        &.L8
          list-style inherit
  &.prettyprint
    &.prettyprinted
      border 0 !important
      padding 20px !important

pre
  font-family Menlo,Monaco,Consolas,"Courier New",monospace
.pln
  color #000
  

          
@media screen
  .str 
    color #080
  .kwd
    color #008
    font-weight bold

  .com
    color #800
    // font-style italic

  .typ
    color #808
    font-weight bold

  .lit
    color #088

  .pun,
    .opn,
    .clo
    color #880

  .tag
    color #008
    font-weight bold

  .atn
    color #808

  .atv
    color #080

  .dec,
    .var
    color #808

  .fun
    color #800

@media print, projection
  .str 
    color #080
  pre
    &.prettyprint
      padding 20px
      border 0

  ol
    &.linenums
      margin-top 0
      margin-bottom 0

  li.L0,
  li.L1,
  li.L2,
  li.L3,
  li.L5,
  li.L6,
  li.L7,
  li.L8
    list-style-type none
  li.L1,
  li.L3,
  li.L5,
  li.L7,
  li.L9
    background #eee

      
