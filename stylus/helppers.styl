.center-vertical
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  align-items center
  justify-content center
.clearfix
  display inline-table
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0
* html .clearfix
  height: 1%
.text-center
  text-align center